<?xml version="1.0" encoding="UTF-8"?>
<!--
  When updating your version of GWT, you should also update this DTD reference,
  so that your app can take advantage of the latest GWT module capabilities.
-->
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.8.0//EN"
  "http://gwtproject.org/doctype/2.8.0/gwt-module.dtd">
<module rename-to='gwtmdl'>

  <!-- Inherit the core Web Toolkit stuff.                        -->
  <inherits name='com.google.gwt.user.User'/>
  
  <!-- Specify the app entry point class.                         -->
  <entry-point class='gwt.material.design.components.client.GwtMDL'/>

  <!-- Specify the paths for translatable code                    -->
  <source path='client'/>

  <!-- Load the Material Design Icons -->
  <stylesheet src="https://unpkg.com/material-components-web@latest/dist/material-components-web.min.css"/>
  <stylesheet src="https://fonts.googleapis.com/css?family=Roboto:300,400,500"/> 
  <stylesheet src="https://fonts.googleapis.com/css?family=Roboto+Mono"/>
  <stylesheet src="https://fonts.googleapis.com/icon?family=Material+Icons"/> 	
  
  <!-- allow Super Dev Mode -->
  <add-linker name="xsiframe"/>  
  
</module>
